{"components/cart/gift-certificates":"<div class=\"cart-totals-item\">\n  {{inject 'giftCertificateInputEmpty' (lang 'cart.gift_certificates.error')}}\n\n  <div data-gift-certificates>\n    <span class=\"cart-total-label\">\n      {{lang 'cart.gift_certificates.gift_certificate'}}\n    </span>\n\n    <span class=\"link\" data-gift-certificate-toggle>\n      {{lang 'cart.gift_certificates.add_code'}}\n    </span>\n\n    <form\n      class=\"form form-gift-certificate\"\n      method=\"post\"\n      action=\"{{urls.cart}}\"\n      data-gift-certificate-form\n    >\n      <label class=\"sr-only form-label\" for=\"certcode\">\n        {{lang 'cart.gift_certificates.enter_code'}}\n      </label>\n      <div class=\"input-group\">\n        <div class=\"form-field input-group-item\">\n          <input\n            class=\"form-input\"\n            id=\"certcode\"\n            type=\"text\"\n            name=\"certcode\"\n            value=\"\"\n            placeholder=\"{{lang 'cart.gift_certificates.enter_code'}}\"\n            data-gift-certificate-input\n          >\n        </div>\n        <div class=\"form-field input-group-item\">\n          <input\n            class=\"button button-tertiary\"\n            type=\"submit\"\n            value=\"{{lang 'cart.gift_certificates.submit'}}\"\n          >\n        </div>\n      </div>\n      <input type=\"hidden\" name=\"action\" value=\"applycoupon\">\n    </form>\n  </div>\n\n  {{#if cart.gift_certificates}}\n    <ul class=\"list-bulleted\">\n      {{#each cart.gift_certificates}}\n        <li>\n          {{lang 'cart.gift_certificates.label' code=code}}\n          <span class=\"cart-total-item\">\n            {{used.formatted}}\n          </span>\n          <div>\n            {{remaining.formatted}} {{lang 'cart.gift_certificates.remaining'}}\n          </div>\n          <a class=\"link\" href=\"{{remove_url}}\">\n            {{lang 'cart.gift_certificates.remove'}}\n          </a>\n        </li>\n      {{/each}}\n    </ul>\n  {{/if}}\n</div>\n"}
